<% if current_user %>
<%= link_to 'Signout', logout_path, class: 'signout-button' %>

  <form id="new-link">
    <label>URL:
      <input id="link-url" name='link-url'>
    </label>
    <label>Title:
      <input id="link-title" name='link-title'>
    </label>
    <input type="submit" value="Add Link">
  </form>

<div class='row filter'>
  <h1>Filter</h1>

  <input type='text' id='filter' name='food-name-filter' placeholder='By text'>
  <button id='only-unread-links' class='delete-link'>Only Unread Links</button>
  <button id='only-read-links' class='delete-link'>Only Read Link</button>
</div>

<div class='row'>
<div id="links-list">
  <% @links.each do |link| %>
    <% link.clear_rank %>
    <% link.mark_top_ten  %>

    <% if link.read == true %>

      <div class='link col-md-3' data-id=<%= link.id %> id=<%= "link-" + link.id.to_s %>>
      <div class='rank'>
        Rank: <%= link.rank %>
      </div>
      <div class='inside-link greyed-out'>
        
        <p class='link-title'>Title: <%= link.title %></p>
        <p class='link-url'>URL: <%= link.url %></p>

        <p class="link_read">
           Read: <%= link.read %>
        </p>
        <p class="link_buttons">
          <button class="mark-unread">Mark as Unread</button>
          <button class='edit-link'>Edit</button>
          <button class='delete-link'>Delete</button>
        </p>
      </div>
      </div>

    <% else %>

      <div class='link col-md-3' data-id=<%= link.id %> id=<%= "link-" + link.id.to_s %>>
      <div class='rank'>
        Rank: <%= link.rank %>
      </div>
      <div class='inside-link'>
        <p class='link-title'>Title: <%= link.title %></p>
        <p class='link-url'>URL: <%= link.url %></p>

        <p class="link_read">
           Read: <%= link.read %>
        </p>
        <p class="link_buttons">
          <button class="mark-read">Mark as Read</button>
          <button class='edit-link'>Edit</button>
          <button class='delete-link'>Delete</button>
        </p>
      </div>
      </div>
    <% end %>
  <% end %>
</div>
</div>

<img src="https://m.popkey.co/4c7272/QL6mJ.gif">

<% else %>
  <h1><%= link_to 'Login', login_path%></h1><br/>
  <h1><%= link_to 'Create Account', signup_path %></h1><br/>
<% end %>