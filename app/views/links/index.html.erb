<% if current_user %>
<%= link_to 'Signout', logout_path, class: 'signout-button' %>

  <form id="new-link">
    <label>URL:
      <input id="link-url" name='link-url'>
    </label>
    <label>Title:
      <input id="link-title" name='link-title'>
    </label>
    <input type="submit" value="Add Link">
  </form>

<div class='row filter'>
  <h1>Filter</h1>

  <input type='text' id='food-name-filter' name='food-name-filter' placeholder='By text'>
  <button class='delete-link'>Only Unread Links</button>
  <button class='delete-link'>ONly Read Link</button>
</div>

<div class='row'>
  <% current_user.links.each do |link| %>
    <div class='link col-md-3' data-id=<%= link.id %> id=<%= "link-" + link.id.to_s %>>
      <p class='link-title'><%= link.title %></p>
      <p class='link-url'><%= link.url %></p>

      <p class="link_read">
         <%= link.read %>
      </p>
      <p class="link_buttons">
        <button class="mark-read">Mark as Read</button>
        <button class='edit-link'>Edit</button>
        <button class='delete-link'>Delete</button>
      </p>
    </div>
  <% end %>
<div id="links-list"></div>
</div>


  <div class='row'>
    <h2>Hot Reads!</h2>
    <ol id="hot-reads">
    <% @hot_links.each do |read| %>
      <li class='hot-read'>
        <a href="<%= read.url %>"><%= read.url %></a>
      </li>
    <% end %>
    </ol>
    <img src="https://m.popkey.co/4c7272/QL6mJ.gif">
  </div>

<% else %>
  <h1><%= link_to 'Login', login_path%></h1><br/>
  <h1><%= link_to 'Create Account', signup_path %></h1><br/>
<% end %>