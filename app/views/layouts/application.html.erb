<!DOCTYPE html>
<html>
<head>
  <title>URLockBox</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="container">

  <div class='row'>
    <% flash.each do |type, message| %>
      <%= content_tag :div, message.html_safe, class: "alert #{type}" %>
    <% end %>
  </div>

  <%= yield %>
</div>

</body>
</html>
